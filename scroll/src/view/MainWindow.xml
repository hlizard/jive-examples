<?xml version="1.0" encoding="UTF-8"?>
<Window
        xmlns="jive"
        xmlns:image="jive.image"
        xmlns:geom="jive.geom"
        xmlns:haxe="http://haxe.org/"
        width="Metric.absolute(Std.int(Lib.current.stage.stageWidth))"
        height="Metric.absolute(Std.int(Lib.current.stage.stageHeight))">
    <haxe:Implements><![CDATA[jive.DataContextControllable<viewmodel.MainViewModel>]]></haxe:Implements>
    <Swiper width="Metric.percent(100)" height="Metric.percent(100)">
        <Scroll width="Metric.percent(100)" height="Metric.percent(100)">
            <Flow width="Metric.percent(100)">
                <image:AssetImage assetId="assets/europe/head.jpeg" width="Metric.percent(100)"/>
                <image:AssetImage assetId="assets/europe/body-1.jpeg" width="Metric.percent(100)"/>
                <image:AssetImage assetId="assets/europe/body-2.jpeg" width="Metric.percent(100)"/>
                <image:AssetImage assetId="assets/europe/body-3.jpeg" width="Metric.percent(100)"/>
                <image:AssetImage assetId="assets/europe/footer.jpeg" width="Metric.percent(100)"/>
            </Flow>
        </Scroll>
        <Scroll width="Metric.percent(100)" height="Metric.percent(100)">
            <Flow width="Metric.percent(100)">
                <image:AssetImage assetId="assets/asia/head.jpeg" width="Metric.percent(100)"/>
                <image:AssetImage assetId="assets/asia/body-1.jpeg" width="Metric.percent(100)"/>
                <image:AssetImage assetId="assets/asia/body-2.jpeg" width="Metric.percent(100)"/>
                <image:AssetImage assetId="assets/asia/body-3.jpeg" width="Metric.percent(100)"/>
                <image:AssetImage assetId="assets/asia/footer.jpeg" width="Metric.percent(100)"/>
            </Flow>
        </Scroll>
        <Scroll width="Metric.percent(100)" height="Metric.percent(100)">
            <Flow width="Metric.percent(100)">
                <image:AssetImage assetId="assets/north-america/head.jpeg" width="Metric.percent(100)"/>
                <image:AssetImage assetId="assets/north-america/body-1.jpeg" width="Metric.percent(100)"/>
                <image:AssetImage assetId="assets/north-america/body-2.jpeg" width="Metric.percent(100)"/>
                <image:AssetImage assetId="assets/north-america/body-3.jpeg" width="Metric.percent(100)"/>
                <image:AssetImage assetId="assets/north-america/footer.jpeg" width="Metric.percent(100)"/>
            </Flow>
        </Scroll>
    </Swiper>
</Window>